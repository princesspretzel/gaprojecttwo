<h2>sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <div class="form-inputs">
    <%= f.text_field :username, :required => true, :autofocus => true, class: 'form-group' %>
    <%= f.text_field :email, :required => true, :autofocus => true, class: 'form-group' %>
    <%= f.text_field :password, :required => true, class: 'form-group' %>
    <%= f.text_field :password_confirmation, :required => true, class: 'form-group' %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Sign Up', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "users/shared/links" %>
