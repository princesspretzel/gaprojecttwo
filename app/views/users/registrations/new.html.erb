<h2>sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div class="form-inputs">

    <div><%= f.label :login %><br />
    <%= f.text_field :login, :required => true, :autofocus => true, placeholder:"username", class: 'form-group' %></div>
    <div><%= f.label :email %><br />
    <%= f.text_field :email, :required => true, :autofocus => true, placeholder:"email address", class: 'form-group' %></div>
    <div><%= f.label :password %><br />
    <%= f.text_field :password, :required => true, placeholder:"password", class: 'form-group' %></div>
    <div><%= f.label :password_confirmation %><br />
    <%= f.text_field :password_confirmation, :required => true, placeholder:"password again", class: 'form-group' %></div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Sign Up', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "users/shared/links" %>
